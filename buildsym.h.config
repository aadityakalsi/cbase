#ifndef CBASE_BUILDSYM_H
#define CBASE_BUILDSYM_H

#if defined(CBASE_BUILD)
#  ifdef _MSC_VER
#    define CBASE_API __declspec(dllexport)
#  else
#    define CBASE_API __attribute__((__visibility__("default")))
#  endif
#else
#  ifdef _MSC_VER
#    define CBASE_API __declspec(dllimport)
#  else
#    define CBASE_API
#  endif
#endif

#if !defined(CBASE_INLINE)
#  if defined(_MSC_VER)
#    define CBASE_INLINE __forceinline
#  else/*GCC like compiler*/
#    define CBASE_INLINE __inline__ __attribute__((always_inline))
#  endif/*defined(_MSC_VER)*/
#endif/*defined(CBASE_INLINE)*/

#if !defined(CBASE_DEBUG) && !defined(NDEBUG)
#  define CBASE_DEBUG 1
#else
#  define CBASE_DEBUG 0
#endif/*defined(CBASE_DEBUG)*/

#define CBASE_PTR_SIZE CMAKE_PTR_SIZE

#define CBASE_32_BIT (CBASE_PTR_SIZE == 4)
#define CBASE_64_BIT (CBASE_PTR_SIZE == 8)

#define CBASE_BIG_ENDIAN !*(unsigned char*)&(unsigned short){1}

#if !CBASE_32_BIT && !CBASE_64_BIT
#  error "cbase needs to be compiled either under 32-bit or 64-bit."
#endif

#endif//CBASE_BUILDSYM_H
